#:kivy 2.0.0
<Label>:
    font_name: 'Roboto'
    font_size: 20
    markup: True

<RobotoButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold: True

    border: (2, 2, 2, 2)

<Participants_num>
    part_num: part_num
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'How many people?'

        TextInput:
            id: part_num
            multiline: False

        RobotoButton:
            id: btn1_start
            text: 'Start'
            on_press: root.put_pnum()
            on_press: root.manager.current = 'Pinput'

<Participants_input>
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            rows: len(self.pnum)
            cols: 2
            padding: 10
            spacing: 10

            Label:
                text: 'Name'
            Label:
                text: 'Number'

            TextInput:
                id: part_num1
                multiline: False

            TextInput:
                id: part_num2
                multiline: False

        RobotoButton:
            id: btn2_start
            text: 'Start'
            on_press: root.check_status()