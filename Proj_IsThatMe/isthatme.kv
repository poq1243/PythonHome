#:kivy 2.0.0
<Participants_num>
    BoxLayout:
        padding: 30
        spacing: 30
        orientation: 'vertical'

        Label:
            text: 'How many people?'

        TextInput:
            id: part_num
            multiline: False

        Button:
            id: btn1_start
            text: 'Start'
            on_press: root.manager.current = 'Pinput'
            on_press: root.Value_save()

<Participants_input>
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            rows: 3
            cols: 2
            padding: 10
            spacing: 10

            Label:
                text: 'Name'
            Label:
                text: 'Number'

            TextInput:
                id: part_num1
                multiline: False

            TextInput:
                id: part_num2
                multiline: False

        Button:
            id: btn2_start
            text: 'Start'
            on_press: root.manager.current = 'answer'
            on_press: root.test()

